
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="8dp"
              android:background="@android:color/background_light"
              android:orientation="vertical"
              tools:context="com.aylanetworks.aura.DeviceDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="end"
            android:text="Owned Shares"
            style="@android:style/TextAppearance.Medium"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview_owned_shares"
            style="@android:style/TextAppearance.Medium"
            android:layout_marginTop="20dp"
            android:layout_margin="2dp"
            android:layout_weight="2"></ListView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Received Shares"
            style="@android:style/TextAppearance.Medium"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview_received_shares"
            style="@android:style/TextAppearance.Medium"
            android:layout_marginTop="20dp"
            android:layout_margin="2dp"
            android:layout_weight="2"></ListView>
    </LinearLayout>

</LinearLayout>
