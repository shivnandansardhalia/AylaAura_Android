                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_device_evb"
        android:id="@+id/device_type_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="test"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/device_type_icon"
        android:layout_centerInParent="true"
        android:id="@+id/textview_device_type"/>

</RelativeLayout>